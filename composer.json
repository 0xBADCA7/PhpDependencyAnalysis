{
    "name"             : "mamuz/php-dependency-analysis",
    "type"             : "project",
    "description"      : "Static code analysis to provide and verify a dependency graph against a defined architecture",
    "homepage"         : "https://github.com/mamuz/PhpDependencyAnalysis",
    "license"          : "MIT",
    "keywords"         : ["code", "php", "dependency", "analysis", "graph", "namespace", "cycles", "reference", "architecture"],
    "authors"          : [
        {
            "name" : "Marco Muths",
            "email": "muzzi_is@web.de"
        }
    ],
    "support"          : {
        "issues": "https://github.com/mamuz/PhpDependencyAnalysis/issues",
        "source": "https://github.com/mamuz/PhpDependencyAnalysis"
    },
    "minimum-stability": "dev",
    "prefer-stable"    : true,
    "require"          : {
        "php"                              : ">=5.3.3",
        "psr/log"                          : "1.0.*",
        "nikic/php-parser"                 : "1.1.*",
        "clue/graph"                       : "0.8.*",
        "graphp/graphviz"                  : "0.2.*",
        "phpdocumentor/reflection-docblock": "2.0.*",
        "doctrine/collections"             : "1.2.*",
        "symfony/yaml"                     : "2.6.*",
        "symfony/console"                  : "2.6.*",
        "symfony/finder"                   : "2.6.*"
    },
    "require-dev"      : {
        "satooshi/php-coveralls": "0.6.*",
        "phpunit/phpunit"       : "4.4.*",
        "mockery/mockery"       : "0.9.*"
    },
    "autoload"         : {
        "psr-4": {
            "PhpDA\\": "src/"
        }
    },
    "bin"              : ["bin/phpda"]
}
